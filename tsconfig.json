{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "emails/**/*"],
  "exclude": [
    "node_modules", 
    "build", 
    "dist", 
    "**/*.test.ts",
    "server/create-supabase-tables.ts",
    "server/setup-supabase.ts", 
    "server/migrate-*.ts",
    "server/simple-migration.ts",
    "server/supabase-migration.ts",
    "server/quick-setup.ts",
    "server/create-admin.ts",
    "server/seed.ts",
    "server/persistent-storage.ts",
    "server/routes-parent-test.ts",
    "data/**",
    "archive/**",
    "*.backup*",
    "**/*.backup*",
    "test-*.js",
    "comprehensive-*.js",
    "fix-*.js",
    "setup-*.js",
    "migrate-*.js",
    "**/*.md",
    "scripts/**",
    "*.sh"
  ],
  "compilerOptions": {
    "incremental": false,
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "noErrorTruncation": false,
    "preserveWatchOutput": true
  }
}
